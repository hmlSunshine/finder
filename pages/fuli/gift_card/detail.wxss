/* pages/fuli/gift_card/detail.wxss */
.img{
  height: 467rpx;
  background:#F8F8F8; 
}
.img_content{
  margin: 45rpx 42rpx;
}
.detail{
  margin: 34rpx 42rpx;
}
.detail-title{
  width: 112rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 40rpx;
}
.detail-des{
  margin: 26rpx 0rpx 34rpx 0rpx;
}
.detail-des-list{
  margin-top: 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #656565;
  line-height: 33rpx;
}
.detail-num{
  display: flex;
  width: 100%;
}
.pay{
  position:fixed; bottom:0;width: 100%;
  height: 206rpx;
  background: #FFFFFF;
  box-shadow: 0rpx -1rpx 24rpx 0rpx rgba(0, 0, 0, 0.1);
}
.pay_rule{
  display: flex;
  align-items: center;
  margin: 23rpx 30rpx 18rpx 30rpx;
}
.pay_rule_text{
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9D9D9D;
  line-height: 37rpx;
}
.pay_rule_text_color{
  color: #E5A079;
}
.pay_footer{
  display: flex;
  justify-content: center;
}
.pay_button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 693rpx;
  height: 90rpx;
  background: #251714;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(37, 23, 20, 0.2);
  border-radius: 49rpx;
}
.pay_button_text{
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 45rpx;
}
